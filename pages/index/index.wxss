  /* background: #FD637E; */
  background-image: url("https://www.lovelilin.com/images/banner.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  height: 400rpx;
  padding-left: 30rpx;
  padding-top: 15rpx;
}
.hi{
  font-weight: bold;
  font-size: 20px;
}
.mar-top-40{
  margin-top: 40rpx;
}
.connect-btn{
  height: 50rpx;
  width: 400rpx;
  text-align: center;
  line-height: 50rpx;
  border: 5rpx solid #E7E7E7;
  /* background: #E87188; */
  background: linear-gradient(to right, #fc555d, #f75493);
  display: inline-block;
  border-radius:30rpx;
  position: absolute;
  bottom: 100rpx;
